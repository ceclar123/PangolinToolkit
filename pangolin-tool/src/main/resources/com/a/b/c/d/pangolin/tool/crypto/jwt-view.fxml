<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="gridPane" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.a.b.c.d.pangolin.tool.controller.crypto.JwtController"
          prefHeight="600" prefWidth="800" hgap="10" vgap="10">
    <columnConstraints>
        <ColumnConstraints prefWidth="60"/>
        <ColumnConstraints prefWidth="150"/>
        <ColumnConstraints prefWidth="300" percentWidth="100"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="150"/>
        <RowConstraints prefHeight="300" percentHeight="100"/>
    </rowConstraints>
    <!-- 第1行 -->
    <Label text="签名算法：" prefWidth="60" minWidth="60" maxWidth="60" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="cmbSignAlgorithm" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button onAction="#btnGenKeyOnAction" text="生成密钥" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <!-- 第2行 -->
    <StackPane GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="1">
        <TitledPane fx:id="tpOneKey" collapsible="false" text="对称密钥">
            <TextArea fx:id="txtSecret" prefHeight="150" prefWidth="${gridPane.width}" wrapText="true"/>
        </TitledPane>
        <SplitPane fx:id="spTwoKey" dividerPositions="0.5">
            <TitledPane collapsible="false" text="公钥">
                <TextArea fx:id="txtPubKey" minWidth="150" prefHeight="100" wrapText="true"/>
            </TitledPane>
            <TitledPane collapsible="false" text="私钥">
                <TextArea fx:id="txtPriKey" minWidth="150" prefHeight="100" wrapText="true"/>
            </TitledPane>
        </SplitPane>
    </StackPane>
    <!-- 第3行 -->
    <GridPane fx:id="gridPaneContent" prefWidth="${gridPane.width}"
              GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="2">
        <columnConstraints>
            <ColumnConstraints prefWidth="200" percentWidth="50"/>
            <ColumnConstraints prefWidth="100"/>
            <ColumnConstraints prefWidth="200" percentWidth="50"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
        </rowConstraints>
        <TitledPane alignment="TOP_LEFT" collapsible="false" text="Payload" GridPane.columnIndex="0"
                    GridPane.rowIndex="0">
            <TextArea fx:id="txtPayload" minWidth="100" prefHeight="${gridPaneContent.height}" wrapText="true"/>
        </TitledPane>
        <FlowPane fx:id="flowPane" alignment="CENTER" orientation="VERTICAL" maxWidth="100" minWidth="100"
                  prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="0" vgap="10">
            <Button onAction="#btnEncryptOnAction" text="加密" prefWidth="${flowPane.width}"/>
            <Button onAction="#btnDecryptOnAction" text="解密" prefWidth="${flowPane.width}"/>
            <Button onAction="#btnVerifyOnAction" text="验签" prefWidth="${flowPane.width}"/>
        </FlowPane>
        <TitledPane collapsible="false" text="Token" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <TextArea fx:id="txtToken" minWidth="100" prefHeight="${gridPaneContent.height}" wrapText="true"/>
        </TitledPane>
    </GridPane>
</GridPane>
