<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="gridPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.a.b.c.d.pangolin.tool.controller.crypto.RsaController">
    <columnConstraints>
        <ColumnConstraints prefWidth="100"/>
        <ColumnConstraints prefWidth="150"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="150"/>
        <RowConstraints percentHeight="100"/>
    </rowConstraints>
    <!-- 第1行 -->
    <Label text="密钥长度(字节)：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="cmbKeyLen" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <ComboBox fx:id="cmbCharsetName" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <!-- 第2行 -->
    <Label text="安全随机值：" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtRandom" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button onAction="#btnGenKeyOnAction" text="生成密钥对" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <!-- 第3行 -->
    <SplitPane fx:id="spKey" dividerPositions="0.5" GridPane.columnIndex="0"
               GridPane.columnSpan="3" GridPane.rowIndex="2">
        <TitledPane collapsible="false" text="公钥">
            <TextArea fx:id="txtPubKey" minWidth="150" prefHeight="150" wrapText="true"/>
        </TitledPane>
        <TitledPane collapsible="false" text="私钥">
            <TextArea fx:id="txtPriKey" minWidth="150" prefHeight="150" wrapText="true"/>
        </TitledPane>
    </SplitPane>
    <!-- 第4行 -->
    <SplitPane fx:id="spContent" dividerPositions="0.5" prefWidth="${gridPane.width}" GridPane.columnIndex="0"
               GridPane.columnSpan="3" GridPane.rowIndex="3">
        <TitledPane alignment="TOP_LEFT" collapsible="false" text="明文">
            <TextArea fx:id="txtFrom" minWidth="100" wrapText="true" prefHeight="${spContent.height}"/>
        </TitledPane>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" maxWidth="60" minWidth="60" orientation="VERTICAL"
                  prefWidth="60">
            <Button fx:id="btnEncrypt" onAction="#btnEncryptOnAction" text="加密"/>
            <Button fx:id="btnDecrypt" onAction="#btnDecryptOnAction" text="解密"/>
        </FlowPane>
        <TitledPane collapsible="false" text="密文">
            <TextArea fx:id="txtTo" minWidth="100" wrapText="true" prefHeight="${spContent.height}"/>
        </TitledPane>
    </SplitPane>
</GridPane>
