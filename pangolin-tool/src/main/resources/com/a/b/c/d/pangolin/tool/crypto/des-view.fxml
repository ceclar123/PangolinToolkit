<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:id="gridPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17.0.2-ea"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.a.b.c.d.pangolin.tool.controller.crypto.DesController">
    <columnConstraints>
        <ColumnConstraints prefWidth="100"/>
        <ColumnConstraints prefWidth="150"/>
        <ColumnConstraints prefWidth="50"/>
        <ColumnConstraints percentWidth="100"/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints percentHeight="50"/>
        <RowConstraints prefHeight="30"/>
        <RowConstraints percentHeight="50"/>
    </rowConstraints>
    <!-- 第1行 -->
    <Label text="加密模式：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ComboBox fx:id="cmbMode" prefWidth="200" GridPane.columnIndex="1" GridPane.columnSpan="3"
              GridPane.rowIndex="0"/>
    <!-- 第2行 -->
    <Label text="密钥长度(字节)：" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="cmbKeyLen" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Button onAction="#btnGenKeyOnAction" text="生成" GridPane.columnIndex="2"
            GridPane.rowIndex="1"/>
    <TextField fx:id="txtKey" prefWidth="300" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
    <!-- 第3行 -->
    <Label text="向量长度(字节)：" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <ComboBox fx:id="cmbIvLen" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button onAction="#btnGenIvOnAction" text="生成" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <TextField fx:id="txtIv" prefWidth="150" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
    <!-- 第4行 -->
    <TextArea fx:id="txtFrom" prefWidth="${gridPane.width}" wrapText="true" GridPane.columnIndex="0"
              GridPane.columnSpan="4" GridPane.rowIndex="3"/>
    <!-- 第5行 -->
    <FlowPane alignment="CENTER_LEFT" prefWidth="${gridPane.width}" GridPane.columnIndex="0" GridPane.columnSpan="4"
              GridPane.rowIndex="4">
        <Button fx:id="btnEncrypt" onAction="#btnEncryptOnAction" text="加密"/>
        <Button fx:id="btnDecrypt" onAction="#btnDecryptOnAction" text="解密"/>
        <ComboBox fx:id="cmbCharsetName" prefWidth="150.0"/>
    </FlowPane>
    <!-- 第5行 -->
    <TextArea fx:id="txtTo" prefWidth="${gridPane.width}" wrapText="true" GridPane.columnIndex="0"
              GridPane.columnSpan="4" GridPane.rowIndex="5"/>
</GridPane>
